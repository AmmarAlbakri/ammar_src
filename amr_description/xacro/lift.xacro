<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="lift_link_origin" value="0 0 0" />
    <xacro:property name="lift_mass" value="31.212" />
    <xacro:property name="lift_Ixx" value="1.403" />
    <xacro:property name="lift_Ixy" value="${-1.102 * 0.000000001}" />
    <xacro:property name="lift_Ixz" value="${-2.364 * 0.0000000001}" />
    <xacro:property name="lift_Iyx" value="${-1.102 * 0.000000001}" />
    <xacro:property name="lift_Iyy" value="4.129" />
    <xacro:property name="lift_Iyz" value="${1.241  * 0.0000000001}" />
    <xacro:property name="lift_Izx" value="${-2.364 * 0.0000000001}" />
    <xacro:property name="lift_Izy" value="${1.241  * 0.0000000001}" />
    <xacro:property name="lift_Izz" value="5.408" />

    <joint name="lift_joint" type="prismatic">
        <parent link="base_link" />
        <child link="lift_link" />
        <origin xyz="-0.074 -0.004 0.185" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <limit effort="10000" velocity="1.0" lower="0.0" upper="0.47" />
    </joint>

    <link name="lift_link">
        <visual>
            <origin xyz="${lift_link_origin}" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://amr_description/mesh/Lift/lift_lowest_mesh.stl" scale="1 1 1" />
            </geometry>
            <material name="Purple">
                <color rgba="0 0 1 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="${lift_link_origin}" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://amr_description/mesh/Lift/lift_lowest_mesh.stl" scale="1 1 1" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="${lift_link_origin}" rpy="0 0 0" />
            <mass value="${lift_mass}" />
            <inertia ixx="${lift_Ixx}" ixy="${lift_Ixy}" ixz="${lift_Ixz}" iyx="${lift_Iyx}" iyy="${lift_Iyy}" iyz="${lift_Iyz}" izx="${lift_Izx}" izy="${lift_Izy}" izz="${lift_Izz}" />
        </inertial>
    </link>

    <gazebo reference="lift_link">
        <material>Gazebo/Grey</material>
    </gazebo>

    <transmission name="lift_joint_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="lift_joint">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="lift_joint_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

</robot>